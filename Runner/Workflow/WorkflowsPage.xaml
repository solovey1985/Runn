<Page x:Class="Runner.Workflows.WorkflowsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Runner.Workflows"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Workflows">
<Page.Resources>
    <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="75"/>
        </Style>
</Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

    <StackPanel Grid.Row="1">
            <ListBox Name="namelsbxTasks" ItemsSource="{Binding Tasks}" PreviewMouseDown="TaskList_MouseDown">
                <ListBox.ItemTemplate>
                <DataTemplate>
                        <StackPanel >
                            <Label Content="{Binding Name}"></Label>
                            <Label Content="{Binding Order}"></Label>
                 </StackPanel>
                </DataTemplate>    
                </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" >
            <Label Content="{Binding Name}" />
            <StackPanel  Background="CadetBlue" Name="taskContainer" AllowDrop="True"  Height="250" MinHeight="250" MinWidth="150" DockPanel.Dock="Top" Drop="Canvas_Drop" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Label>Drop task here in order to execute</Label> 
            </StackPanel>
        </StackPanel>
        


    </Grid>
</Page>
