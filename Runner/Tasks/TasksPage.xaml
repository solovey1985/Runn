<Page x:Class="Runner.Tasks.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Runner.Tasks"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Tasks"
      Background="AliceBlue"
      Margin="5"
      
      >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <ListBox>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding Type}" />
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
                <StackPanel Margin="0 2">
                    <Label>Type</Label>
                    <ComboBox Name="cmbxTaskType" ItemsSource="{Binding TaskTypeList}" SelectedIndex="1"></ComboBox>
                </StackPanel>
            <StackPanel Margin="0 2" Grid.Column="1">
                    <Label>Name</Label>
                    <TextBox Name="txbxName" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></TextBox>
                </StackPanel>
            <StackPanel Margin="0 2" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <Label>Description</Label>
                <TextBox MinLines="2" Name="txbxDescription" Text="{Binding Description}"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 2" Grid.Row="3" Grid.ColumnSpan="2">
                <DockPanel  HorizontalAlignment="Stretch" Height="26" VerticalAlignment="Top">
                <Label >Path to file</Label>
                    <Button Height="26">Select File</Button>
                </DockPanel>
                <TextBlock Grid.Row="4" Grid.Column="1" Name="txblPathToFile" Text="{Binding PahtToFile}"></TextBlock>
            </StackPanel>
        </Grid>
            
        
    </Grid>
</Page>
